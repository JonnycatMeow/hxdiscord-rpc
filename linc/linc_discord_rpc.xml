<xml>

    <files id = "haxe"> 
        <!--gotta sort this out-->
        <compilerflag value = "-I${haxelib:hxdiscord-rpc}/linc/" /> 
        <compilerflag value = "-I${haxelib:hxdiscord-rpc}/lib/discord/src/" /> 
        <file name = "${haxelib:hxdiscord-rpc}/linc/linc_discord_rpc.cpp" />  
        <!--mac-->
        <file name = "${haxelib:hxdiscord-rpc}/lib/discord/src/connection_unix.cpp" if="mac||linux"/>
        <file name = "${haxelib:hxdiscord-rpc}/lib/discord/src/discord_register_osx.m" if="mac"/> 
        <!--windows-->
        <file name = "${haxelib:hxdiscord-rpc}/lib/discord/src/connection_win.cpp" if="windows"/>
        <file name = "${haxelib:hxdiscord-rpc}/lib/discord/src/discord_register_win.cpp" if="windows"/> 
        <!--linux-->
        <file name = "${haxelib:hxdiscord-rpc}/src/discord_register_linux.cpp" if="linux" />
    </files>  

    <target id="haxe">
        <section if = "windows">
        <lib name = "${haxelib:hxdiscord-rpc}/lib/discord/libs/windows/discord-rpc.lib" if="HXCPP_M64" /> 
        </section>

        <section if = "mac">
        <lib name = "${haxelib:hxdiscord-rpc}/lib/discord/libs/mac/libdiscord-rpc.a" if="HXCPP_M64"/> 
        </section>

        <section if = "linux">
         <lib name = "${haxelib:hxdiscord-rpc}/lib/discord/libs/linux/libdiscord-rpc.a" /> <!--yes i know its the same file and name from mac but trust me i didn't copy and pate it i build it from source-->
        </section>
        
    </target>

    <section id = "vars"> 

    <set name = "NO_PRECOMPILED_HEADERS" value = "1" /> 

    </section>

    
</xml>
